<h1>Orders</h1>

<%= link_to 'New Order', new_order_path %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>User</th>
      <th>Location</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.user.email %></td>
        <td><%= order.location.name %></td>
        <td>
          <%= link_to 'Show', order_path(order) %>
          <%= link_to 'Edit', edit_order_path(order) %>
          <%= button_to 'Destroy', order_path(order), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
