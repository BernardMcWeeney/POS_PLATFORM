<!-- app/views/carts/show.html.erb -->
<h1>Your Cart</h1>

<% @cart.cart_items.each do |cart_item| %>
  <h2><%= cart_item.product.name %></h2>
  <%= form_with model: [current_cart, cart_item], url: cart_item_path(cart_item), method: :patch do |form| %>
    <%= form.number_field :quantity, min: 1 %>
    <%= form.submit 'Update' %>
  <% end %>
  <hr>
<% end %>

<%= button_to 'Checkout', checkout_cart_path(@cart), method: :post %>
