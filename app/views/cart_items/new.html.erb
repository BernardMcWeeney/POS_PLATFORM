<h1>Add a Product to Your Cart</h1>

<%= form_with model: @cart_item, url: cart_items_path do |form| %>
  <% if @cart_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cart_item.errors.count, "error") %> prohibited this cart item from being saved:</h2>

      <ul>
      <% @cart_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :product_id %>
    <%= form.collection_select(:product_id, Product.all, :id, :name) %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, min: 1, value: 1 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
