<h1>Organisations</h1>

<%= link_to 'New Organisation', new_organisation_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Owner</th>
      <th>Image</th>
      <th>Web Links</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organisations.each do |organisation| %>
      <tr>
        <td><%= organisation.name %></td>
        <td><%= organisation.address %></td>
        <td><%= organisation.owner %></td>
        <td><%= image_tag url_for(organisation.image), size: "100x100" if organisation.image.attached? %></td>
        <td><%= organisation.web_links %></td>
        <td><%= link_to 'Show', organisation %></td>
        <td><%= link_to 'Edit', edit_organisation_path(organisation) %></td>
        <td><%= button_to 'Delete', organisation_path(organisation), method: :delete, data: { confirm: 'Are you sure?' } %><td>
      </tr>
    <% end %>
  </tbody>
</table>
