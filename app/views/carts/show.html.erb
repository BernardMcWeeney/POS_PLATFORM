<h1>Your Cart</h1>

<% @cart.cart_items.each do |cart_item| %>
  <div>
    <p><%= cart_item.product.name %></p>
    <p>Quantity: <%= cart_item.quantity %></p>
    <p>Price: <%= number_to_currency(cart_item.price) %></p>
    <p>Tax: <%= number_to_currency(cart_item.tax) %></p>
    <p>Total: <%= number_to_currency(cart_item.total) %></p>
    <%= link_to 'Edit', edit_cart_item_path(cart_item) %>
    <%= button_to 'Remove', cart_item, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>

<p>Total Price: <%= number_to_currency(@cart.total) %></p>
<p>Total Tax: <%= number_to_currency(@cart.tax) %></p>
